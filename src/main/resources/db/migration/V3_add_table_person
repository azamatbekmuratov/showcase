CREATE TABLE TASK_DB.person (
  id INT NOT NULL AUTO_INCREMENT,
  iin varchar(255) NOT NULL,
  first_name varchar(512) NOT NULL,
  last_name varchar(512) NOT NULL,
  middle_name varchar(512) NOT NULL,
  phone_number varchar(255) NOT NULL,
  birth_date varchar(255),
  gender varchar(10),
  doc_number varchar(255),
  place_of_issue varchar(255),
  date_of_issue varchar(255),
  valid_date varchar(255),
  salary_amount varchar(255),
  expenses varchar(255),
  created_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
  updated_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  PRIMARY KEY (id)
) ENGINE=INNODB;